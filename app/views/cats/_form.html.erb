<% if @cat.errors.present? %>
	<div class='alert alert-error'>
		<p>Yikes! Something went wrong...</p>
		<% @cat.errors.full_messages.each do |message| %>
			<li><%= message %>.</li>
		<% end %>
	</div>
<% end %>
<%= form_for @cat do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :breed %>
	<%= f.text_field :breed %>
	<%= f.label :birthday %>
	<p><%= f.text_field :birthday, id: 'datepicker' %></p>
	<%= f.label :description, 'Tell us about your cat.' %>
	<%= f.text_area :description, rows: 10 %>
	<br/><br/>
	<% if @cat.new_record? %>
		<%= f.submit 'Add Your Cat', class: 'btn btn-primary btn-large' %>
	<% else %>
		<%= f.submit 'Update Your Cat', class: 'btn btn-primary btn-large' %>
	<% end %>
<% end %>