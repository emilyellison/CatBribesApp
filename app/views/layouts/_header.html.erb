<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
			<header>
				<h1><%= link_to 'CatBribes', root_url, class: 'brand' %></h1>
				<% if @current_member %>
					<ul class='nav pull-right'>
						<li class="dropdown">
					    <a href="<%= member_url(@current_member.id) %>" class="dropdown-toggle" data-toggle="dropdown">
					    	<%= @current_member.first %> <%= @current_member.last %>
					      <b class="caret"></b>
					    </a>
					    <ul class="dropdown-menu">
					    	<li>
									<%= link_to "<i class='icon-user'></i> Profile".html_safe, member_url(@current_member.id) %>
								</li>
								<li><%= link_to "<i class='icon-th-list'></i> Update Profile".html_safe, edit_member_url(@current_member.id) %></li>
								<li><%= link_to "<i class='icon-off'></i> Sign Out".html_safe, sessions_url %></li>
					    </ul>
					  </li>
					</ul>
				<% else %>
					<ul class='nav pull-right'>
						<li><%= link_to 'Sign Up', new_member_url %></li>
						<li><%= link_to 'Sign In', new_session_url %></li>
					</ul>
				<% end %>
			</header>
		</div>
	</div>
</div>
