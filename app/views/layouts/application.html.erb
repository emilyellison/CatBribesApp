<!DOCTYPE html>
<html>
<head>
  <title>CatBribes</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
	<meta name='viewport' content='width=device-width'/>
</head>
<body>
	<%= render 'layouts/header' %>
	<div class='catbribes_content'>
		<div class='container'>
			<% if flash[:notice] %>
				<p class='alert alert-info'><%= flash[:notice] %></p>
			<% end %>
			<% if flash[:success] %>
				<p class='alert alert-success'><%= flash[:success] %></p>
			<% end %>
			<% if flash[:error] %>
				<p class='alert alert-error'><%= flash[:error] %></p>
			<% end %>
			<div class='row'>
				<h2 class='span12'><%= yield :title %></h2>
				
			</div>
			<br/>
			<%= yield %>
		</div>
	</div>
	<%= render 'layouts/footer' %>
</body>
</html>
